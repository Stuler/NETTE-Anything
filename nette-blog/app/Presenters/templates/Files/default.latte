{block content}

	<link rel="stylesheet" href="{$basePath}/css/style.css">
	<link rel="stylesheet" href="{$basePath}/css/normalize.css">
	<link rel="stylesheet" href="{$basePath}/css/bootstrap.css">

	<main class="jumbotron col-sm-4">
    <div>
        <p><a n:href="Homepage:default">ZpÄ›t na homepage</a></p>
    </div>

    <div class="form-group">
        {control formUpload}
    </div>

    <div class="form-group">
        {control formCreate}
    </div>

    <div>
        <h3 class="display-6">Strom</h3>

        {* Po uploadnuti/vytvoreni sa stranka presmeruje na vybranu zlozku
        cez perzistentne parametre? *}

        <ul class="list-group">
            {foreach $items as $item}
                <li n:class="list-group-item, list-group-item-action, $selectedId == $item[id] ? active" >
                    {if $item[is_dir]}
                        <a n:href="default id=>$item[id],level=>$item[level],is_dir=>$item[is_dir]"><h5 class="mb-1">{$item[name]}</h5></a>
                        <ul class="list-group">
                            {foreach $item[items] as $subItem}
                                <li n:class="list-group-item, list-group-item-action, $selectedId == $subItem[id] ? active">
                                    {if $subItem[is_dir]}
                                        <a n:href="default id=>$subItem[id],level=>$subItem[level], is_dir=>$subItem[is_dir]"><h6 class="mb-1">{$subItem[name]}</h6></a>
                                    {else}
                                        {$subItem[name]}
                                    {/if}
                                </li>
                            {/foreach}
                        </ul>
                    {else}
                        {$item[name]}
                    {/if}
                </li>
            {/foreach}
        </ul>
    </div>
	</main>

	{* Riesenie rekurziou:
		- zistim level elementu
		- ak ma level 1, necham tak
		- ak nema level 1, zistim rodica
		- zistujem level rodicov, kym nedojdem na level1
	*}

    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
{/block}